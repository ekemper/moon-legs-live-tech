# Frontend dev: run Vite with HMR. Use with volume mount and docker-compose.dev.yml.
FROM node:20-alpine

WORKDIR /app

COPY frontend/package.json frontend/package-lock.json* ./
RUN if [ -f package-lock.json ]; then npm ci; else npm install; fi

COPY frontend/ ./

EXPOSE 5173

CMD ["npm", "run", "dev"]
